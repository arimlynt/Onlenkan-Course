<%- include ../../partials/header.ejs  %>  
<%- include ../../partials/navbar.ejs  %>  
<%- include ../../partials/sidebar.ejs  %> 
<div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Category Course</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item"><a href="/category">Category Course</a></li>
                  <li class="breadcrumb-item active">Ubah</li>
                </ol>
              </div>
            </div>
          </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Form Update Category Course "<%= category.name %>" </h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form action="/category/edit/<%= category._id %>?_method=PUT" method="POST">
                            <div class="card-body">
                                <div class="form-group">
                                  <label for="name">Name</label>
                                  <input type="text" value="<%= category.name %> " name="name" class="form-control" id="name" required>
                                </div>
                                
                              <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Ubah</button>
                              </div>
                        </form>
                    </div>
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
</div>
<%- include ../../partials/footer.ejs  %> 
<%- include ../../partials/js.ejs  %> 