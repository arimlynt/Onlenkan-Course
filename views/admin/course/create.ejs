<%- include ../../partials/header.ejs  %>  
<%- include ../../partials/navbar.ejs  %>  
<%- include ../../partials/sidebar.ejs  %> 
<div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Course</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item"><a href="/course">Course</a></li>
                  <li class="breadcrumb-item active">Tambah</li>
                </ol>
              </div>
            </div>
          </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Form Create Course</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form action="/course/create" method="POST" enctype="multipart/form-data">
                            <div class="card-body">         
                              <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" name="title" class="form-control" id="title" required>
                              </div>
                              <div class="form-group">
                                <label>Category</label>
                                <select class="form-control select2bs4" name="category" style="width: 100%;" required>
                                  <option>Pilih Category</option>
                                    <% category.forEach(category=>{%>
                                      <option value="<%= category._id %>"><%= category.name %></option> 
                                    <% }) %>
                                </select>
                              </div>
                              <div class="form-group">
                                <label for="slogan">Slogan</label>
                                <input type="text" name="slogan" class="form-control" id="slogan" required>
                              </div>
                              <div class="form-group">
                                <label for="description">Description</label>
                                <input type="text" name="description" class="form-control" id="description" required>
                              </div>
                              <div class="form-group">
                                <label for="keypoint">Keypoint</label>
                                <input type="text" name="keypoint" class="form-control" id="keypoint" required>
                              </div>
                              <div class="form-group">
                                <label for="designedfor">Designed for</label>
                                <input type="text" name="designedfor" class="form-control" id="designedfor" required>
                              </div>
                              <div class="form-group">
                                <label for="tools">Tools</label>
                                <input type="text" name="tools" class="form-control" id="tools" required>
                              </div>
                              <div class="form-group">
                                <label for="price">Price</label>
                                <input type="number" name="price" class="form-control" id="price" required>
                              </div>
                              <div class="form-group">
                                <label for="discount">Discount Price</label>
                                <input type="number" name="discount" class="form-control" id="discount" required>
                              </div>
                              <div class="form-group">
                                <label for="image">Photos</label>
                                <input type="file" name="image" class="form-control" id="image" required>
                                <br>
                                <img src="" id="preview">
                              </div>                            
                              <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Tambah</button>
                              </div>
                            </div>
                        </form>
                    </div>
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
</div>
<%- include ../../partials/footer.ejs  %> 
<%- include ../../partials/js.ejs  %> 
<script>
    function readURL (input) {
      if (input.files && input.files[0]){
        const reader = new FileReader();
  
        reader.onload = function(e){
          $('#preview').attr('src', e.target.result)
          $('#preview').attr('width', '20%')
          $('#preview').attr('height', '20%')
        }
        reader.readAsDataURL(input.files[0])
      }
    }
  
    $('#image').change(function(){
      readURL(this)
    })
  </script>