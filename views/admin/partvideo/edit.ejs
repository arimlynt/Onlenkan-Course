<%- include ../../partials/header.ejs  %>  
<%- include ../../partials/navbar.ejs  %>  
<%- include ../../partials/sidebar.ejs  %> 
<div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Part Video</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item"><a href="/partvideo">Part Video</a></li>
                  <li class="breadcrumb-item active">Ubah</li>
                </ol>
              </div>
            </div>
          </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Form Update Part Video "<%= partvideo.title %>"</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form action="/partvideo/edit/<%= partvideo._id %>?_method=PUT" method="POST">
                            <div class="card-body">  
                              <div class="form-group">
                                <label>Course</label>
                                <select class="form-control select2bs4" name="course_id" style="width: 100%;" required>
                                  <option selected="selected">Pilih Course</option>
                                    <% course.forEach(course=>{%>
                                      <option value="<%= course._id %>"
                                        <% if(course._id.toString() === partvideo?.course_id?._id.toString()) { %>
                                            selected 
                                        <% } %>
                                        >
                                        <%= course.title %>  
                                    </option> 
                                    <% }) %>
                                </select>
                              </div>
                              <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" value="<%= partvideo.title %>" name="title" class="form-control" id="title" required>
                              </div>                            
                              <div class="form-group">
                                <label for="order">Order</label>
                                <input type="number" value="<%= partvideo.order %>" name="order" class="form-control" id="order" required>
                              </div>                            
                              <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Ubah</button>
                              </div>
                            </div>
                        </form>
                    </div>
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
</div>
<%- include ../../partials/footer.ejs  %> 
<%- include ../../partials/js.ejs  %> 